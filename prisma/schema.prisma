datasource db {
provider = "sqlite" // or "postgresql", "mysql", etc. depending on your database
url = env("DATABASE_URL") // This is usually loaded from your .env file
}

generator client {
  provider = "prisma-client-js"
}

// Project Model

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  slug        String   @unique
  image       String?
  tags        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Blog Model

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  slug        String   @unique
  image       String?
  tags        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// -----------------------Settings---------------------

// My Contact Links

model ContactLink {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  image     String?
  href      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// My Skills 

model Skill {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  image     String?
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}